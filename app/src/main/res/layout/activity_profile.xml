        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/imageView_userIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/setTelephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userIcon"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userIcon"
                android:background="@color/editTextBG"
                android:hint="NÂ° Telephone"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:inputType="phone"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imageView_userDate"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:src="@drawable/calendar" />

            <EditText
                android:id="@+id/setAnniversaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userDate"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userDate"
                android:background="@color/editTextBG"
                android:hint="Date naissance"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:inputType="date"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imageView_userPrenom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:src="@drawable/user" />

            <EditText
                android:id="@+id/setPrenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userPrenom"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userPrenom"
                android:background="@color/editTextBG"
                android:hint="Prenom"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:inputType="text"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/imageView_userNom"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorPrimary"
                android:padding="8dp"
                android:src="@drawable/family" />

            <EditText
                android:id="@+id/setNom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView_userNom"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView_userNom"
                android:background="@color/editTextBG"
                android:hint="Nom"
                android:paddingLeft="20dp"
                android:textSize="15sp"
                android:inputType="text"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexe : "
                android:textSize="15sp"
                android:textStyle="bold" />
            <ToggleButton
                android:id="@+id/setGenre"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textOff="Masculin"
                android:textOn="Feminin" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/deco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/buttonstyleithgradient"
            android:text="deco"
            android:textColor="#fff" />
        <Button
            android:background="@drawable/buttonstyleithgradient"
            android:id="@+id/suivant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Suivant"
            android:textColor="#fff"
            />
    </LinearLayout>


</LinearLayout>

